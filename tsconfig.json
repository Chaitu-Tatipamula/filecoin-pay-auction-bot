{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "lib": ["es2022"],
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["index.js", "bin", "lib", "vendored", "tests"],
  "exclude": ["dist/**/*"]
}
